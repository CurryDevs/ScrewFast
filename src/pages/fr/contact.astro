---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/fr/ContactSection_fr.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Nous Contacter | ${SITE.title}`;
const metaDescription =
  "Vous avez des questions ou souhaitez discuter d'un projet ? Contactez-nous et élaborons ensemble la solution parfaite avec nos outils et services.";
const ogTitle = "Nous Contacter | Torque Craft";
---

<MainLayout
  title={pageTitle}
  lang="fr"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://torquecraft.uk/fr/contact",
    url: "https://torquecraft.uk/fr/contact",
    name: "Nous Contacter | Torque Craft",
    description:
      "Vous avez des questions ou souhaitez discuter d'un projet ? Contactez-nous et élaborons ensemble la solution parfaite avec nos outils et services.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://torquecraft.uk/fr/",
      name: "Torque Craft",
      description:
        "Torque Craft propose des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "fr",
  }}
>
  <ContactSection />
</MainLayout>
